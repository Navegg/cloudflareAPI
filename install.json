{
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "./source/nvg.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.updateAccount(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "naccount":{
        "title": "Google Account",
        "type": "object",
        "format": "account",
        "services": ["googleanalytics", "navegg"],
        "required": true
      },
      "account": {
        "title": "Navegg Account ID",
        "order": 0,
        "type": "integer",
        "format": "textarea",
        "placeholder": "Put your tag here! XXXXX"
      }
    }
  }
}
