{
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "./source/nvg.js"
      }
    ]
  },
  "preview": {
    "hide": true
  },
  "hooks": [
    {
      "endpoint": "https://oauth.navegg.com/v1/hook/",
      "events": ["oauth-login"],
      "block": true,
      "authenticate": ["user"],
      "failure": {
        "action": "notify",
        "message": "There was an error communicating with Naveggg."
      }
    },
    {
      "events": ["account-logout"],
      "action": "reset-schema"
    }
  ],
  "options": {
    "properties": {
      "user":{
        "title": "Navegg User",
        "type": "object",
        "format": "account",
        "services": ["navegg"],
        "required": true,
        "order": 0
      },
      "account":{
        "title": "Account ID",
        "type": "string",
        "description": "Select the account to integrate with Cloudflare.",
        "required": true,
        "order": 1
      }
    }
  }
}
